@inherits LayoutComponentBase

@using AdvancedAnalysisDesign.Enums

<MudNavMenu Style="margin-top:0.5rem;">
    <MudGrid Spacing="1" Style="max-width:100%">
        <MudItem xs="12">
            <MudNavLink Href="/index" Icon="@Icons.Material.Filled.Home">Home Page</MudNavLink>
        </MudItem>
        <AuthorizeView Roles="@(Role.Admin + "," + Role.GP)">
            <Authorized>
                <MudItem xs="12">
                    <MudNavLink Href="/GpUploadSearch" Icon="@Icons.Material.Filled.CloudUpload">Upload Results</MudNavLink>
                </MudItem>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="@(Role.Admin + "," + Role.Patient)">
            <Authorized>
                <MudItem xs="12">
                    <MudNavLink Href="/PatientDashboard" Icon="@Icons.Material.Filled.LocalHospital">Patient Dashboard</MudNavLink>
                </MudItem>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="@(Role.Pharmacist + " ," + Role.Admin)">
            <Authorized>
                <MudItem xs="12">
                    <MudNavLink Href="/PharmacistDashboard" Icon="@Icons.Material.Filled.LocalPharmacy">Pharmacist Dashboard</MudNavLink>
                </MudItem>
                <MudItem xs="12">
                    <MudNavLink Href="/PharmacistPatientSearch" Icon="@Icons.Material.Filled.People">Patient Search</MudNavLink>
                </MudItem>
                <MudItem xs="12">
                    <MudNavLink Href="/Admin" Icon="@Icons.Material.Filled.Security">Admin Settings</MudNavLink>
                </MudItem>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <MudItem xs="12">
                    <MudNavLink Href="/settings" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.People">User Settings</MudNavLink>
                </MudItem>
                <MudItem xs="12">
                    <MudNavLink Href="/Logout" Icon="@Icons.Material.Filled.ExitToApp">Log out</MudNavLink>
                </MudItem>
            </Authorized>
            <NotAuthorized>
                <MudItem xs="12">
                    <MudNavLink Href="/Login" Icon="@Icons.Material.Filled.Login">Log in</MudNavLink>
                </MudItem>
            </NotAuthorized>
        </AuthorizeView>
    </MudGrid>
</MudNavMenu>