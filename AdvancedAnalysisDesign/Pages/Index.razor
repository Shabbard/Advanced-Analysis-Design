@page "/index"
@page "/" 
    @*Added another route for auto-redirect*@
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<MudContainer Class="mt-16">
    <MudGrid Justify="Justify.Center" Class="mt-16">
        @if (!darkModeEnabled)
        {
            <img src="Logo.svg" alt="Company Logo" class="mt-16" width="500" />
        }
        else
        {
            <img src="Logo.svg" alt="Company Logo" class="mt-16" style="filter:invert(1)" width="500" />
        }

    </MudGrid>

    <MudDivider Class="mt-10 mb-10"></MudDivider>
    @*TODO: Add index content*@
</MudContainer>

@code{
    bool darkModeEnabled;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender)
        {
            darkModeEnabled = await LocalStorage.GetItemAsync<bool>("DarkModeEnabled");
        }

        StateHasChanged();
    }
}